##---------- Keybindings for bspwm ----------##

# Terminal 
super + Return
    kitty

# Dropdown note taking term
super + shift + Return
    {bspc rule -a \* -o state=floating sticky=on layer=above rectangle=720x360+600+40 && kitty --session ~/.config/bspwm/kitty/startup_session}

##---------- Rofi Launcher & Menus ----------##

# dmenu collections
alt + F1
	rofi -show drun

super + Tab
	rofi -show window

ctrl + alt + x
    sh ~/.config/rofi/bin/powermenu

super + F1
	sxhkhmenu
	#sh ~/.config/rofi/bin/sxhkd-list

super + period
    emoji-picker

##---------- Applications ----------##
super + shift + w
    firefox

super + shift + f
    thunar

##---------- System ----------##

# Take a screenshot
Print
    flameshot gui

#Music Control
XF86Audio{Play,Stop}
    media-toggle.sh
#    media{-toggle,-toggle,-prev,-next}


#Temp prev,next
XF86Audio{Prev,Next}
		playerctl{ "previous", "next"}

# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
    volume.sh{ "inc", "dec", "mute"}

##---------- Bspwm ----------##

# Lockscreen
ctrl + alt + shift + l
    betterlockscreen -l dimblur

# Toggle lockscreen. ~/.config/bin/toggle_screenlock.sh
ctrl + alt + l
	toggle_screenlock.sh

# Reload Keybindings
super + Escape
    pkill -USR1 -x sxhkd && dunstify -u low "sxhkd reloaded"

# Quit/Restart bspwm
ctrl + alt + {q,r}
    bspc {quit,wm -r}

# Reload polybar
ctrl + alt + p
   $BASH ~/.config/polybar/launch.sh


# Close App
super + c
    bspc node -c

super + shift + c
    xkill

# Fullscreen or Monocle
super + f
    bspc desktop -l next


# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + {p,t}
    bspc node -t {pseudo_tiled,tiled}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
    bspc node -f {next.local,prev.local}

#Focus mover
super + {h,j,k,l}
    focusmover {west,south,north,east}

#Node mover
super + shift + {h,j,k,l}
    euclid_mover {west,south,north,east}

#Node resizer
super + ctrl + {h,j,k,l}
    bspwm_resize.sh {west,south,north,east}

# Send focused window to another workspace
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}' --follow


# Hide/Unhide Window
super + shift + i
    winmask
##---------- EOF ----------##

